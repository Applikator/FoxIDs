@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model RegisterTwoFactorViewModel

@{
    ViewData["Title"] = Localizer["Two-factor authentication"];
}

<h1 class="heading">@ViewData["Title"]</h1>

<div class="row page-container">
    <div class="col-md page-content">
        <form method="post">
             <div class="info-message">
                @Localizer["Register two-factor authentication app."]
            </div>
            <div asp-validation-summary="ModelOnly"></div>
            <img src="@Model.BarcodeImageUrl" /><br/>
            <div class="form-group active-group active">
                <div class="card bg-light">
                    <div class="card-body px-3 py-2">
                        @Model.ManualSetupCode
                    </div>
                </div>
                <label asp-for="ManualSetupCode" class="label-control"></label>
            </div>
            <div class="form-group active-group">
                <input asp-for="InputCode" class="form-control input-control" autofocus />
                <label asp-for="InputCode" class="label-control"></label>
                <span asp-validation-for="InputCode"></span>
            </div>

            <div class="form-group button-group">
                <input type="submit" value="@Localizer["Register two-factor app"]" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
